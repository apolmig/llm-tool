{
  "name": "ciudadania",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "description": "Herramienta de Evalucion LLM",
  "author": "Presidencia del Gobierno",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:3000 && tsc -p electron/tsconfig.json && node -e \"require('fs').writeFileSync('dist-electron/package.json', JSON.stringify({type:'commonjs'}))\" && electron .\"",
    "electron:build": "tsc -p electron/tsconfig.json && node -e \"require('fs').writeFileSync('dist-electron/package.json', JSON.stringify({type:'commonjs'}))\" && vite build && electron-builder",
    "test": "vitest -c vite.config.test.ts"
  },
  "dependencies": {
    "i18next": "^25.8.0",
    "lucide-react": "^0.554.0",
    "mammoth": "^1.11.0",
    "pdfjs-dist": "^5.4.449",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.14.0",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.presidencia.ciudadania",
    "productName": "CiudadanIA",
    "directories": {
      "output": "dist-electron/release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "dir"
    }
  }
}
